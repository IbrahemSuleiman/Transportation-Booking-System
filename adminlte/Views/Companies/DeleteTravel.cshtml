@model adminlte.Models.Travel
@using Microsoft.AspNet.Identity
@using adminlte.Models

@{
    ViewBag.Title = "DeleteTravel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var db = new ApplicationDbContext();
    var travel = db.Travels.Where(a => a.Id == Model.Id).SingleOrDefault();

    var vehicle = db.Vehicles.Where(a => a.Id == travel.IDVehicle).SingleOrDefault();

    var BUS = db.Buses.Where(a => a.Id == vehicle.IDBus).SingleOrDefault();

    var DRIVER = db.PublicDrivers.Where(a => a.Id == vehicle.IDPublicDriver).SingleOrDefault();
}

<div class="content-wrapper">
    <h2>DeleteTravel</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Travel</h4>
        <hr />
        <dl class="dl-horizontal">           

            <dt>
                @Html.DisplayNameFor(model => model.Location)
            </dt>

