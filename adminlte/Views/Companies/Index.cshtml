@model IEnumerable<adminlte.Models.Company>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <h2>Companies list</h2>

    @*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
    <table class="table">
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.CompanyID)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyFax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyTelePhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AboutCompany)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.CompanyID)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyFax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyTelePhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AboutCompany)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) 
                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                </td>
            </tr>
        }

    </table>
    </div>