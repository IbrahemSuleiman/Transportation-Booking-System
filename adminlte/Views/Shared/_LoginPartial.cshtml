@using Microsoft.AspNet.Identity
@using adminlte.Models

@{
    var db = new ApplicationDbContext();
    var CurrentID = User.Identity.GetUserId();
    var temp = db.Users.Where(a => a.Id == CurrentID).SingleOrDefault();

    List<MailBox> mails = new List<MailBox>();
    if (temp == null) { temp = new ApplicationUser(); }
    else { mails = db.MailBoxes.Where(a => a.TargetID == temp.Id).ToList(); }

 }

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
        <div class="navbar-custom-menu" style="margin-right:10px">
            <ul class="nav navbar-nav">
                <!-- Messages: style can be found in dropdown.less-->
                <li class="dropdown messages-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-envelope-o"></i>
                        <span class="label label-success">@mails.Count</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="header">Your messages</li>
                        <li>
                            <!-- inner menu: contains the actual data -->
                            <ul class="menu">
                                @{
                                        var x = 0;
                                        foreach (var item in mails)
                                        {
                                        x++;
                                        <li>
                                            <!-- start message -->
                                            <a href="">
                                                <div class="pull-left">
                                                    <img src="~/Content/adminlte/img/user2-160x160.jpg" class="img-circle" alt="User Image">
                                                </div>
                                                <h4>
                                                    @item.Sender
                                                    <small><i class="fa fa-clock-o"></i> @item.TimeStamp</small>
                                                </h4>
                                                <p>Message @x</p>
                                            </a>
                                        </li>
                                    }
                                }
                                
                                                             

                            </ul>
                        </li>
                        <li class="footer"><a href="Mailboxes">See All Messages</a></li>
                    </ul>
                </li>
                <!-- Notifications: style can be found in dropdown.less -->
                <li class="dropdown notifications-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <i class="fa fa-bell-o"></i>
                        <span class="label label-warning">@mails.Count</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="header">Your notifications</li>
                        <li>
                            <!-- inner menu: contains the actual data -->
                            <ul class="menu">
                                @{
                                    var y = 0;
                                    foreach (var item in mails)
                                    {
                                        y++;
                                        <li>                                         
                                            <a href="">
                                                <div class="pull-left">
                                                    <i class="fa fa-users text-aqua"></i> notification @y                                               
                                                </div>
                                                <div class="pull-right">                                                   
                                                    @{

                                                        var v = item.Message.Split('@');
                                                    }                                                   
                                                    <i>@item.Sender</i>
                                                    @if (v.Length>=2)
                                                    {
                                                        <small><i class="fa fa-clock-o"></i> @v[1]</small>
                                                    }
                                                    else
                                                    {
                                                        <small><i class="fa fa-clock-o"></i> </small>
                                                    }

                                                   
                                                </div>
                                               
                                            </a>
                                        </li>
                                    }
                                }
                               
                               
                            </ul>
                        </li>
                        <li class="footer"><a href="#">View all</a></li>
                    </ul>
                </li>
                <!-- User Account: style can be found in dropdown.less -->
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/Content/adminlte/img/avatar5.png" class="user-image" alt="User Image">
                        <span class="hidden-xs">Hello  @User.Identity.GetUserName()</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img src="~/Content/adminlte/img/avatar5.png" class="img-circle" alt="User Image">
                            <p>
                                 @User.Identity.GetUserName() - @temp.UserRole
                                <small>Member since @temp.RegistrationDate.Year/@temp.RegistrationDate.Month</small>
                            </p>
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                @{
                                    if (temp.UserRole == "Client")
                                    {
                                        <a href="~/Account/ViewClientProfile" class="btn btn-default btn-flat">Profile</a>
                                    }
                                    if (temp.UserRole == "Transportation Company")
                                    {
                                        var CurrentCompany = db.Companies.Where(a => a.CompanyID == CurrentID).SingleOrDefault();
                                        <a href="~/Companies/Edit/@CurrentCompany.Id" class="btn btn-default btn-flat">Profile</a>
                                    }
                                }
                               
                            </div>
                            <div class="pull-right">
                                <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">Sign out</a>
                            </div>
                        </li>
                    </ul>
                </li>

            </ul>
        </div>
    
   @*<ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>*@

    }
}
else
{
    <ul class="nav navbar-nav navbar-right" style="margin-right:30px">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
